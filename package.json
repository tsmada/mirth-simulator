{
  "name": "mirth-node-runtime",
  "version": "1.0.0",
  "description": "Modern development environment for Mirth Connect",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "build:channels": "ts-node scripts/build-channels.ts",
    "dev": "ts-node scripts/cli.ts dev",
    "cli": "ts-node scripts/cli.ts"
  },
  "dependencies": {
