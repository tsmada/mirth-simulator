    "@types/node": "^18.11.18",
    "@types/xmldom": "^0.1.34",
    "jest": "^27.5.1",
    "ts-jest": "^27.1.5",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0"
  },
  "jest": {
    "preset": "ts-jest",
